<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/selector_item_background"
    android:padding="2dp"
    >

    <ImageView
        android:id="@+id/ivFile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/tvFileName"
        app:layout_constraintStart_toStartOf="@+id/tvFileName"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:lines="1"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivFile"
        app:layout_constraintStart_toStartOf="parent"
        android:text="财务室都好似很低"
         />

    <ImageView
        android:id="@+id/ivPlayTag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@+id/ivFile"
        app:layout_constraintEnd_toEndOf="@+id/ivFile"
        app:layout_constraintTop_toTopOf="@+id/ivFile"
        app:layout_constraintBottom_toBottomOf="@+id/ivFile"
        android:src="@mipmap/video_icon"
        android:background="#00000000"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>